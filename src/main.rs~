use sdl2::pixels::Color;
use sdl2::event::Event;
use sdl2::keyboard::Keycode;
use sdl2::render::WindowCanvas;
use sdl2::rect::Rect;
use sdl2::pixels;
use std::time::Duration;


const SCREEN_HEIGHT: u32 = 600;
const SCREEN_WIDTH: u32 = 800;
const TILE_SIZE: f32 = 64.0;
const MAP_SIZE: usize = 32;


struct Player {
    x: f32,
    y: f32,
    speed_movement: f32,
    speed_rotation: f32,
}


fn render(canvas: &mut WindowCanvas, player: &mut Player) {
    let bg_color = Color::RGB(0,150,0);
    let wallcolor = Color::RGB(50,150,50);
    canvas.set_draw_color(bg_color);
    canvas.clear();
    canvas.set_draw_color(wallcolor);
    canvas.present();
    let mut map:[[i32;MAP_SIZE];MAP_SIZE] = [[1;MAP_SIZE];MAP_SIZE];
    map[1][1] = 1;
    map[1][2] = 0;
    map[1][3] = 0;
    map[1][4] = 0;
    map[1][5] = 0;
    map[1][6] = 0;
    map[1][7] = 0;
    map[2][7] = 0;
    map[4][7] = 0;
    map[5][7] = 0;
    map[5][7] = 0;
    map[6][7] = 0;
    map[5][7] = 0;
    canvas.set_draw_color(Color::RGB(0, 0, 0)); 
    canvas.fill_rect(Rect::new(0, 0, 32,32));	
    // render raycast
    
	
    
    
    canvas.present();

}


fn main_loop() -> Result<(), String> {
   //initialising windows and canvas 
    let sdl_context = sdl2::init()?;
    let video_subsystem = sdl_context.video()?;
    let window = video_subsystem.window("Rayleigh", SCREEN_WIDTH, SCREEN_HEIGHT)
        .position_centered()
        .build()
        .expect("could not initialize video subsystem");
    let mut canvas = window.into_canvas().build()
        .expect("could not make a canvas");

    //initialising gameplay things

    let mut player = Player {
	
	x: 2.0,
	y: 2.0,
	speed_movement: 0.1,
	speed_rotation:0.1,

    };


    

    //calculate render data

    
    
    


    
// event handling
    let mut event_pump = sdl_context.event_pump()?;
    'running: loop {
	// event handling
	for event in event_pump.poll_iter() {
            match event {
                Event::Quit {..} |
                Event::KeyDown { keycode: Some(Keycode::Escape), .. } => {
                    break 'running;
                }
		
		Event::KeyDown{keycode: Some(Keycode::W), ..} => {
		    
		    player.x += 0.0;
		    player.y += 12.0;
		}
		Event::KeyDown{keycode: Some(Keycode::A), ..} => {
		}
		Event::KeyDown{keycode: Some(Keycode::S), ..} => {
		    
		    player.x -= 0.0;
		    player.y -= 12.0;
		}
		Event::KeyDown{keycode: Some(Keycode::D), ..} => {
		    
		}
                _ => {}
            }
        }
	// render
        render(&mut canvas, &mut player);
	// sleep
        ::std::thread::sleep(Duration::new(0, 1_000_000_000u32 / 60));
    }
    Ok(())
}

fn main() {

main_loop();
}
